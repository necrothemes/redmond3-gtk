	    arrow_direction = RIGHT
	    state = INSENSITIVE
	}

	image
	{
	    function = SLIDER
	    file = "img/slider.png"
        border = {3, 3, 3, 3}
	    stretch = TRUE
	}
	image
	{
	    function = SLIDER
	    file = "img/slider-active.png"
        border = {3, 3, 3, 3}
	    stretch = TRUE
	    state = ACTIVE
