    fg[NORMAL] = "#000000"
	xthickness = 0
	ythickness = 0
    engine "pixmap"
    {

	image
	{
	    function = BOX
	    file = "img/button.png"
	    stretch = TRUE
		border = {4,4,4,4}
		state = NORMAL
	}

	image
	{
	    function = BOX
	    file = "img/button.png"
